<ImageView
    android:layout_width="match_parent"
    android:layout_height= "wrap_content"
    android:id="@+id/imagen"
    android:adjustViewBounds ="true"
    android:srv ="@drawable/universidad_francisco_gavidia"
    app:Layout_constraintTopOF="parent"
    android:contentDescription="Lobo de la UFG"
/>
    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="programacion de dispositibos moviles - PDMO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/image"
        android:textAlignment="center"
        android:textStyle="blod"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:lines="20"
        android:maxLines="25"
        android:minlines="1"
        android:hint="Diguite el texto del mensaje"
        android:scrollbars="vertical"
        android:textColor="#FF0000"
        android:typeface="sans"
        android:longClickable="false"
        android:textIsSelectable="True"
        android:layout_below="@+id/txt_jose_alejandro"
        />
<!--
    </androidx.constraintlayout.widget.ConstraintLayout>
-->
</RelativeLayout>





